<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>UniComm - Register</title>
   <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
   <link rel="stylesheet" href="/register.css">
</head>

<body>
    <div class="register">
        <img src="" alt="register image" class="register__img" id="randomImage">
        <form action="/register" method="POST" enctype="multipart/form-data" class="register__form" id = "register__form">
            <a href="/" style="color: white;"><h1 class="register__title title" style="font-size: 38px; font-weight: bold;">UniComm</h1></a>
            <h2 class="register__title">Register</h2>

            <div class="register__content">
                <div class="register__box">
                    <i class="ri-mail-line register__icon"></i>
                    <div class="register__box-input">
                        <input type="email" placeholder=" " id="email" name="email" required class="register__input">
                        <label for="register-email" class="register__label">Email</label>
                    </div>
                </div>
                <div class="gap_1"></div>
				<div class="duplicate error"></div>
				<div class="email error"></div>

                <div class="register__box with-gap">
                    <i class="ri-user-3-line register_icon"></i>
                    <div class="register__box-input">
                        <input type="text" placeholder=" " id="username" name="username" required class="register__input">
                        <label for="register-username" class="register__label">Username</label>
                    </div>
                </div>

                <div class="register__box">
                    <i class="ri-lock-2-line register__icon"></i>
                    <div class="register__box-input">
                      <input type="password" placeholder=" " id="password" name="password" required class="register__input">
                      <label for="register-pass" class="register__label">Password</label>
                      <i class="ri-eye-off-line eye" id="eye"></i>
                    </div>
                </div>
				<div class="password error"></div>
                <div class="gap_2"></div>

                <div class="register__box with-gap">
                    <i class="ri-book-line register__icon"></i>
                    <div class="register__box-input">
                      <select id="university" name="university" required class="custom-select register__input">
                          <option value="">Select University</option>
                          <% universities.forEach(function(university) { %>
                            <option value="<%= university.uni_id %>"><%= university.uni_name %></option>
                          <% }); %>
                      </select>
                    </div>
                </div>

                <div class="register__box with-gap">
                    <i class="ri-book-line register__icon"></i>
                    <div class="register__box-input">
                        <select id="faculty" name="faculty" required class="custom-select register__input">
                            <option value="">Select Faculty</option>
                            <option value="1">Random</option>
                        </select>
                    </div>
                </div>

                <div class="register__box with-gap">
                    <i class="ri-book-line register__icon"></i>
                    <div class="register__box-input">
                        <select id="department" name="department" required class="custom-select register__input">
                            <option value="">Select Department</option>
                            <option value="1">random</option>
                        </select>
                    </div>
                </div>

                <div class="register__box with-gap">
                    <i class="ri-file-line register__icon"></i>
                    <div class="register__box-input">
                        <input type="file" name="studentFile" id="studentFile" required class="register__input" accept=".pdf" onchange="validateFileType(this)">
                        <label for="studentFile" class="register__label" id="fileLabel">Upload your E-state Student Document</label>
                    </div>
                </div>

                <button type="submit" class="register__button">Register</button>
                <p class="loading-message centered-message" style="display: none; color: yellow; margin-top: -20px;">Verifying student...</p>
            </div>
            <p class="register__login">
                Already have an account? <a href="/login">Login</a>
            </p>
        </form>
    </div>

    <script src="/random_picture.js"></script>
    <script src="/faculty-department_selection.js"></script>
    <script src="/pdf_checker.js"></script>
	<script src="/signup_error.js"></script>
    <script src="/password_visibility.js"></script>
</body>
</html>
